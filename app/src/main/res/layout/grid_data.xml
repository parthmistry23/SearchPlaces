<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView android:layout_width="wrap_content"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    android:id="@+id/cardview"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginRight="5dp"
    android:background="#00ffdf"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/icon"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/placeName"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/icon"
        android:text="PlaceName"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/placeAddress"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/placeName"
        android:text="PlaceAddress"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rating"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#c50d0c"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/placeAddress"
        android:text="Rating"/>
</RelativeLayout>
</android.support.v7.widget.CardView>

